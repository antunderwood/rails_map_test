<%=  google_map :width => 800, :height => 500 %>
<%= link_to_remote :add_markers,  :url => { :action => "add_markers"} , :before => "clear_map()"%><br/>
<%= select_tag "country", options_for_select([["Austria", "AT"], ["Denmark", "DK"], ["Germany", "DE"],["Greece", "GR"], ["United Kingdom", "UK"]]), :onchange => remote_function(:url => { :action => 'show_country'},:with => "'country='+value")%><br/>
<%= select_tag "country", options_for_select(@sequence_types), :onchange => remote_function(:url => { :action => 'show_sequence_type'},:with => "'sequence_type='+value")%><br/>
<%= link_to_function "Clear map", "clear_map()" %>